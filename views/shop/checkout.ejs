<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>

            <div class="allheader">
                <h1>Check Out</h1>
              </div>
              <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.productId.title %></h1>
                        <h2>Quantity: <%= p.quantity %></h2>
                    </li>
                <% }) %>
            </ul>
            <div class="centered">
                <div class="cart_pay">
                    <div class="cart__item_pay">
                        <h1>Total Pay:  </h1>
                        <h1>  $ <%= totalSum %></h1>
                    </div>
                </div>
            </div>

            <div class="centered">
                <button id="order-btn" class="btn btn-primary">ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('ppk_test_51HBOdPKXLgEE35XHCs2HGiEm4VGaIW750zumvZQt1o8G2Ymh7YhR1VihhvaQhNOOs1smQvu0GQbUkw9KSjL62aJQ00Nz9bgeuJ');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function() {
                        //redirect user to stripe page to enter details.
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
            </div>
       
           
        </main>
    <%- include('../includes/end.ejs') %>