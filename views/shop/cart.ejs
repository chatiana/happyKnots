<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div class="allheader text-center">
                <h1>My cart</h1>
           </div>
            
            <% if (products.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"><h2>Product</h2></th>
                            <th scope="col"><h2>Quantity</h2></th>
                            <th scope="col"><h2>Unit Price</h2></th>
                            <th scope="col"><h2>Subtotal</h2></th>
                            <th> </th>
                        </tr>
                    </thead>
                   
                    <tbody>
                
                        <tr> 
        <% products.forEach(p => { %>
                            <th><%= p.productId.title %> </th>
                            <th> <p><%= p.quantity %></p></th>  
                            <th><p><%= p.productId.price %></p></th>   
                            <th>56Eur</th>
                            <th> 
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </th>       
                        </tr>         
           <% }) %>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Subtotal</h5></td>
                        <td><h5><strong>$24.59</strong></h5></td>
                        <td>   </td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                         <td><h5>Estimated shipping</h5></td>
                        <td ><h5><strong>$FREE</strong></h5></td>
                        <td>   </td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td><h3><strong>$31.53</strong></h3></td>
                        <td>   </td>
                    </tr>
                    <tr></tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td> <a class="btn btn-primary" href="/checkout">CHECKOUT</a>
                        </td>
                      
                    </tr>
            </tbody>
                </table>
            <div class="centered">
                <a class="btn btn-primary" href="/checkout">ORDER NOW NOW</a>

         <!--     <form action="/create-order" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary">Order Now!</button>
                </form>  -->
            </div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>


            
        </main>
        <%- include('../includes/end.ejs') %>