<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <div class="allheader">
                <h1>Products</h1>
            </div>

            <% if (prods.length > 0) { %>

<!-- Control buttons -->
<div id="myBtnContainer">
  <button class="btn active" onclick="filterSelection('all')"> Show all</button>
  <button class="btn" onclick="filterSelection('planthanger')"> Plant Hangers</button>
  <button class="btn" onclick="filterSelection('macrame')"> Macrame</button>
  <button class="btn" onclick="filterSelection('accessories')"> Accessories</button>
  <button class="btn" onclick="filterSelection('gifts')"> Gifts</button>
</div>

                <div class="grid">
                    <% for (let product of prods) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">â‚¬
                                    <%= product.price %>
                                </h2>
                        
                            </div>
                            <div class="card__actions">
                                <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
                                <% if (isAuthenticated) { %>
                                    <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                <% } %>
                            </div>
                        </article>
                        <% } %>
                </div>
                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>
        </main>
        <script>
            const types = ['planthanger','macrame','accessories', 'gifts']
            function getElements(types, display) {
              const classeNames = types.reduce((accumulator, currentValue) => {
                const elems = document.getElementsByClassName(currentValue);
                return accumulator.concat(...elems)
              }, [])
              classeNames.forEach(className => {
                className.style.display = display;
              })
            }
            function showAll() {
              getElements(types, null);
            }
            function filterSelection(elem) {
              showAll();
              if(elem !== 'all') {
                const hideTypes = types.filter(type => type !== elem);
              getElements(hideTypes, 'none');
              }
            }
          </script>
            <%- include('../includes/end.ejs') %>